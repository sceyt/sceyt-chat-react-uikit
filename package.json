{
  "name": "sceyt-chat-react-uikit",
  "version": "1.6.4",
  "description": "React UI Kit with customizable components for Sceyt Chat",
  "author": "Sceyt",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sceyt/sceyt-chat-react-uikit"
  },
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "files": [
    "dist",
    "assets"
  ],
  "engines": {
    "node": ">=10"
  },
  "babel": {
    "plugins": [
      "@babel/plugin-transform-react-pure-annotations",
      "@babel/plugin-transform-classes"
    ],
    "presets": [
      [
        "@babel/preset-react",
        {
          "pragma": "dom",
          "pragmaFrag": "DomFrag",
          "throwIfNamespace": false,
          "runtime": "classic",
          "targets": {
            "esmodules": true
          }
        }
      ]
    ]
  },
  "scripts": {
    "build": "microbundle-crl --no-compress --format modern,cjs && cp -r src/assets dist/ && find dist -maxdepth 1 -name '*.svg' -delete",
    "start": "microbundle-crl watch --no-compress --format cjs --jsxFragment React.Fragment && cp -r src/assets dist/",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && yarn install && yarn run build",
    "deploy": "gh-pages -d example/build"
  },
  "peerDependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-classes": "^7.22.15",
    "@babel/preset-react": "^7.22.5",
    "@reduxjs/toolkit": "^1.8.5",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/dom-mediacapture-record": "^1.0.11",
    "@types/file-saver": "^2.0.5",
    "@types/jest": "^25.1.4",
    "@types/linkify-it": "^3.0.2",
    "@types/node": "18.7.15",
    "@types/react": "^18.0.18",
    "@types/react-dom": "18.0.6",
    "@types/react-easy-crop": "^2.0.0",
    "@types/react-redux": "^7.1.24",
    "@types/redux-saga": "^0.10.5",
    "@types/styled-components": "^5.1.26",
    "@types/uuid": "^9.0.0",
    "@types/wavesurfer.js": "^6.0.6",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "8.54.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-react": "^13.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-standard": "^5.0.0",
    "microbundle-crl": "^0.13.11",
    "moment": "^2.29.4",
    "npm-run-all": "4.1.5",
    "prettier": "3.1.0",
    "react-scripts": "5.0.1",
    "typescript": "^5.3.2",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "@lexical/offset": "0.12.2",
    "@lexical/react": "0.12.2",
    "file-saver": "^2.0.5",
    "lexical": "0.12.2",
    "linkify-it": "^4.0.1",
    "loglevel": "^1.9.2",
    "mic-recorder-to-mp3": "https://github.com/NikolaBalaban/mic-recorder-to-mp3.git",
    "react-circular-progressbar": "^2.1.0",
    "react-easy-crop": "^4.6.2",
    "react-elastic-carousel": "^0.11.5",
    "react-redux": "^8.0.2",
    "redux": "^4.2.0",
    "redux-saga": "^1.1.3",
    "styled-components": "^5.3.5",
    "uuid": "^9.0.0",
    "wavesurfer.js": "^6.6.3"
  }
}
